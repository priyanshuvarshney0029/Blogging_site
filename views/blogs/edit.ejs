<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>    

<div class="row">
    <div class="col-6 mx-auto">
        <form action="/blogs/<%=foundProduct._id%>?_method=PATCH" method="POST">

            <div class="mb-3">
                <label for="name">Name: </label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name of the blog" value="<%=foundProduct.name%>">
            </div>

            <div class="mb-3">
                <label for="title">Title: </label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Title of the blog" value="<%=foundProduct.title%>">
            </div>

            <div class="mb-3">
                <label for="content">Content: </label>
                <textarea class="form-control" name="content" id="content" rows="5" placeholder="Content of the product"><%=foundProduct.content%></textarea>
            </div>

            <div class="mb-3">
                <label for="img">Image: </label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the product" value="<%=foundProduct.img%>">
            </div>

            <div class="mb-3">
                <label for="desc">Description: </label>
                <textarea class="form-control" name="desc" id="desc" rows="5" placeholder="Description of the product"><%=foundProduct.desc%></textarea>
            </div>

            <button class="btn btn-sm btn-success" type="submit">Edit Blog</button>

        </form>
    </div>
</div>
</body>
</html>
