<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>    

<div class="row">
    <div class="col-6 mx-auto">

        <form action="/blogs" method="POST">

            <div class="mb-3">
                <label for="naam">Name: </label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Author's name">
            </div>

            <div class="mb-3">
                <label for="title">Title: </label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Title of the blog">
            </div>

            <div class="mb-3">
                <label for="content">Content: </label>
                <textarea name="content" class="form-control" id="content" rows="5" placeholder="Content of the blog"></textarea>
            </div>

            <div class="mb-3">
                <label for="img">Image: </label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL for the blog">
            </div>

            <div class="mb-3">
                <label for="desc">Description: </label>
                <textarea name="desc" class="form-control" id="desc" rows="3" placeholder="Short description of the blog"></textarea>
            </div>

            <button class="btn btn-sm btn-success" type="submit">Add Blog</button>

        </form>

    </div>
</div>

</body>
</html>
